<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full h-screen bg-gray-800 text-black p-5 mb-3">
      <form
        action="/create"
        method="post"
        class="flex flex-col gap-2 w-[300px] items-">
        <input type="text" name="name" placeholder="name" />
        <input type="email" name="email" placeholder="email" />
        <input
          type="password"
          name="password"
          placeholder="password" />
        <input type="number" name="age" placeholder="age" />
        <input
          type="submit"
          value="submit"
          class="p-2 bg-blue-500 text-white" />
      </form>
      <hr class="my-6"> 
      <div class="users text-white">
        <ul>
           <% if(users.length>0){ users.forEach((user)=>{ %> 
           <ul class="border-2 border-white m-2">
            <li>name: <%=user.name%></li>
            <li>email:  <%=user.email%></li>
            <li>age: <%=user.age%></li>
            <li>password: <%=user.password%></li>
            <button class="bg-yellow-900 py-1 px-4 rounded-lg">Show Password</button>
            </ul>
         <% })} %> 
        </ul>
      </div>
    </div>
  </body>
</html>
