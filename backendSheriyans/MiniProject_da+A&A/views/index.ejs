<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div
      class="w-full min-h-screen bg-zinc-600 flex flex-col items-center">
      <div class="w-full flex py-9 justify-center gap-5">
        <a
          class="group flex items-center justify-between gap-4 rounded-lg border border-current px-5 py-3 text-indigo-700 transition-colors bg-gray-200 hover:bg-indigo-600 focus:outline-none focus:ring active:bg-indigo-500"
          href="/register">
          <span
            class="font-medium transition-colors group-hover:text-white">
            Create account
          </span>

          <span
            class="shrink-0 rounded-full border border-indigo-600 bg-white p-2 group-active:border-indigo-500">
            <svg
              class="size-5 rtl:rotate-180"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </span>
        </a>
        <a
          class="group flex items-center justify-between gap-4 rounded-lg border border-current px-5 py-3 text-indigo-700 transition-colors bg-gray-200 hover:bg-indigo-600 focus:outline-none focus:ring active:bg-indigo-500"
          href="/profile">
          <span
            class="font-medium transition-colors group-hover:text-white">
            Profile
          </span>

          <span
            class="shrink-0 rounded-full border border-indigo-600 bg-white p-2 group-active:border-indigo-500">
            <svg
              class="size-5 rtl:rotate-180"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </span>
        </a>
        <a
          class="group flex items-center justify-between gap-4 rounded-lg border border-current px-5 py-3 text-indigo-700 transition-colors bg-gray-200 hover:bg-indigo-600 focus:outline-none focus:ring active:bg-indigo-500"
          href="/login">
          <span
            class="font-medium transition-colors group-hover:text-white">
            Login
          </span>

          <span
            class="shrink-0 rounded-full border border-indigo-600 bg-white p-2 group-active:border-indigo-500">
            <svg
              class="size-5 rtl:rotate-180"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </span>
        </a>
        <a
          class="group flex items-center justify-between gap-4 rounded-lg border border-current px-5 py-3 text-indigo-700 transition-colors bg-gray-200 hover:bg-indigo-600 focus:outline-none focus:ring active:bg-indigo-500"
          href="/logout">
          <span
            class="font-medium transition-colors group-hover:text-white">
            Logout
          </span>

          <span
            class="shrink-0 rounded-full border border-indigo-600 bg-white p-2 group-active:border-indigo-500">
            <svg
              class="size-5 rtl:rotate-180"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </span>
        </a>
      </div>

      <div class="w-full border-t-3 border-white pt-9 px-2">
        <h3 class="text-3xl text-white font-semibold mb-4">
          created accounts:
        </h3>
        <!-- ************************************** -->

        <div class="overflow-x-auto">
          <table
            class="min-w-full divide-y-2 divide-gray-200 bg-white text-sm dark:divide-gray-700 dark:bg-gray-900">
            <thead class="ltr:text-left rtl:text-right">
              <tr>
                <th
                  class="text-left whitespace-nowrap px-4 py-2 font-medium text-gray-900 dark:text-white">
                  Name
                </th>
                <th
                  class="text-left whitespace-nowrap px-4 py-2 font-medium text-gray-900 dark:text-white">
                  Email
                </th>
                <th
                  class="text-left whitespace-nowrap px-4 py-2 font-medium text-gray-900 dark:text-white">
                  Password
                </th>
              </tr>
            </thead>

            <tbody
              class="divide-y divide-gray-200 dark:divide-gray-700">
              <% users.forEach((user)=> { %>

              <tr>
                <td
                  class="whitespace-nowrap px-4 py-2 font-medium text-gray-900 dark:text-white">
                  <%=user.name %>
                </td>
                <td
                  class="whitespace-nowrap px-4 py-2 text-gray-700 dark:text-gray-200">
                  <%=user.email%>
                </td>
                <td
                  class="whitespace-nowrap px-4 py-2 text-gray-700 dark:text-gray-200">
                  <%=user.password%>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
        <!-- ************************************** -->
      </div>
    </div>
  </body>
</html>
